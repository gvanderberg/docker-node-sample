extends ../layouts/desktop

block page
  - var menu = "post"
block content
  div.container
    div= error
    div.row
      h2.page-header Post an Article
      div= error
      div.col-md-12
        form(action="/articles/post", method="POST", role="form")
          div.form-group
            label(for="title") Title
            input#title.form-control(name="title", type="text", placeholder="JavaScript is good")
          div.form-group
            label(for="slug") Slug
            input#slug.form-control(name="slug", type="text", placeholder="js-good")
            span.help-block This string will be used in the URL.
          div.form-group
            label(for="body") Text
            textarea#body.form-control(rows="5", name="body", placeholder="Text")
          p
            button.btn.btn-primary(type="submit") Save