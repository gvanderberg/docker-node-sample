extends ../layouts/desktop

block page 
  - var menu = "articles"
block content
    div.container
        div.page-header
            h1 #{title} <small>aka</small> Developer
            | #[a.btn.btn-primary.pull-right(href="/articles/post") create]
        if (articles.length === 0)
            | There's no published content yet. 
            a(href="/signin") Sign in
            |  to post and publish.
        else 
            ul.timeline
                each article, index in articles.reverse()
                    li(class=(index % 2)?"timeline-inverted":"")
                        div.timeline-badge
                        div.timeline-panel
                            div.timeline-heading
                                h4.timeline-title #[a(href="/articles/view/#{article._id}")= article.title]
                                p: small.text-muted: i.glyphicon.glyphicon-time  #{article.createdAt.toDateString()}
                            div.timeline-body
                                p #{article.body}